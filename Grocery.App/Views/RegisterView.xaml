<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.RegisterView"
             Title="RegisterView">
    <VerticalStackLayout>
        <Label Text="Register" FontSize="24" HorizontalOptions="Center" Margin="0,20,0,20"/>
        <Label Text="Full name"/>
        <Entry Placeholder="Full name" Text="{Binding Name}" Keyboard="Default"/>
        <Label Text="Email" HorizontalOptions="Start" Margin="20,0,0,0"/>
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email"/>
        <Label Text="Password"/>
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True"/>
        <Button Text="Register" Command="{Binding RegisterCommand}" Margin="0,20,0,0"/>
    </VerticalStackLayout>
</ContentPage>